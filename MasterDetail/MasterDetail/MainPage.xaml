<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MasterDetail"
             x:Class="MasterDetail.MainPage"
                  Title="MasterApp">
    <MasterDetailPage.Master>
        <ContentPage Title="Master" BackgroundColor="Gray">
            <ContentPage.Content>
                <StackLayout Padding="5,30,5,5">
                    <Button Text="Go to Page 1" Clicked="btn1_Click"/>
                    <Button  Text="Go to Page 2" Clicked="btn2_Click"/>
                    <Label x:Name="nm" Text="Night Mode" HorizontalOptions="Center"/>
                    <Switch HorizontalOptions="Center" Toggled="swch1"/>
                </StackLayout>
            </ContentPage.Content>
        </ContentPage>
    </MasterDetailPage.Master>
    <MasterDetailPage.Detail>
        <ContentPage Title="Detail" BackgroundColor="DarkGray">
        <ContentPage.Content>
                <Label Text="Detail Page" Font="30" VerticalOptions="Center" HorizontalOptions="Center"/>
            </ContentPage.Content>
        </ContentPage>
    </MasterDetailPage.Detail>
</MasterDetailPage>
